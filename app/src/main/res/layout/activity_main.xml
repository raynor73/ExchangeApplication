<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="ru.ilapin.exchangeapplication.MainActivity">

	<TextView
			android:text="@string/amount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/toAmountLabel"
			android:layout_marginLeft="16dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="@+id/toAmount"
			android:layout_marginStart="16dp"
			android:layout_marginTop="0dp"
			app:layout_constraintBottom_toBottomOf="@+id/toAmount"
			android:layout_marginBottom="8dp" />

	<EditText
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/toAmount"
			android:layout_marginRight="16dp"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toRightOf="@+id/fromAmountLabel"
			android:layout_marginLeft="8dp"
			app:layout_constraintHorizontal_bias="0.0"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="16dp"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/toCurrency" />

	<Spinner
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/fromCurrency"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/fromLabel"
			android:layout_marginLeft="16dp"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_marginRight="16dp"
			app:layout_constraintRight_toRightOf="parent"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp" />

	<TextView
			android:text="@string/from"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/fromLabel"
			android:layout_marginLeft="16dp"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_marginStart="16dp"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/rate" />

	<EditText
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:ems="10"
			android:id="@+id/fromAmount"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/fromCurrency"
			android:layout_marginRight="16dp"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toRightOf="@+id/fromAmountLabel"
			android:layout_marginLeft="8dp"
			app:layout_constraintHorizontal_bias="0.0"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="16dp" />

	<TextView
			android:text="@string/amount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/fromAmountLabel"
			android:layout_marginLeft="16dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="@+id/fromAmount"
			app:layout_constraintBottom_toBottomOf="@+id/fromAmount"
			android:layout_marginBottom="8dp"
			android:layout_marginStart="16dp" />

	<TextView
			android:text="@string/to"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/toLabel"
			app:layout_constraintTop_toBottomOf="@+id/fromAmount"
			android:layout_marginLeft="16dp"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_marginStart="16dp" />

	<Spinner
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/toCurrency"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/toLabel"
			android:layout_marginRight="16dp"
			app:layout_constraintRight_toRightOf="parent"
			android:layout_marginLeft="16dp"
			app:layout_constraintLeft_toLeftOf="parent" />

	<TextView
			android:text="@string/rate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/rateLabel"
			android:layout_marginLeft="8dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="16dp"
			app:layout_constraintRight_toLeftOf="@+id/rate"
			android:layout_marginRight="8dp"
			app:layout_constraintHorizontal_chainStyle="packed" />

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/rate"
			android:layout_marginRight="8dp"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toRightOf="@id/rateLabel"
			android:layout_marginTop="16dp"
			app:layout_constraintHorizontal_chainStyle="packed"
			tools:ignore="RtlHardcoded" />

	<Button
			android:text="Button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/button"
			android:layout_marginRight="8dp"
			app:layout_constraintRight_toRightOf="parent"
			android:layout_marginLeft="8dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="8dp"
			tools:ignore="HardcodedText" />

</android.support.constraint.ConstraintLayout>
